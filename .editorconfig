# See editorconfig.org for reference

root = true

[*]
indent_size = 4
indent_style = tab
end_of_line = lf

[{*.hpp, *.cpp}]
indent_size = 4
indent_style = space
end_of_line = lf

[*.j2]
indent_size = 4
indent_style = space
end_of_line = lf

[{*py,*.yaml,*.yml}]
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
insert_final_newline = true
trim_trailing_whitespace = false

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
